{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
	"features": {
		"ghcr.io/devcontainers/features/desktop-lite:1.2.8": {
			"version": "latest",
			"noVncVersion": "1.6.0",
			"password": "vscode",
			"webPort": "6080",
			"vncPort": "5901"
		}
	},
	"forwardPorts": [
		6080, 5901
	],
	"portsAttributes": {
		"6080": {
			"label": "desktop"
		},
		"5901": {
			"label": "desktop-vnc"
		}
	}
}